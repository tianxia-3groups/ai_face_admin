{
  "learningRate": 0.001,
  "epochs": 100,
  "batchSize": 32,
  "validationSplit": 0.2,
  "patience": 10,
  "minDelta": 0.001,
  "optimizer": "adam",
  "loss": "categorical_crossentropy",
  "metrics": ["accuracy"],
  "inputShape": [512, 512, 3],
  "classCount": 1,
  "dataAugmentation": {
    "enabled": true,
    "rotation": 20,
    "widthShift": 0.2,
    "heightShift": 0.2,
    "shear": 0.2,
    "zoom": 0.2,
    "horizontalFlip": true,
    "fillMode": "nearest"
  },
  "callbacks": {
    "earlyStopping": true,
    "reduceLROnPlateau": true,
    "modelCheckpoint": true
  },
  "hardware": {
    "gpu": true,
    "memoryGrowth": true,
    "mixedPrecision": false
  }
}
